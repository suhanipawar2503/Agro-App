<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7ECD81"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#7ECD81"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:layout_margin="40dp"
                android:src="@drawable/userhome" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.5"
                    android:layout_margin="20dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                       android:onClick="btnProfileClick">


                        <ImageView
                            android:layout_width="187dp"
                            android:layout_height="108dp"
                            android:layout_gravity="center"
                            android:src="@drawable/kisanprofile" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home"
                            android:textAlignment="center"
                            android:fontFamily="serif-monospace"
                            android:textSize="22dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.5"
                    android:layout_margin="20dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:onClick="btncatgoryClick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">



                        <ImageView
                            android:layout_width="186dp"
                            android:layout_height="92dp"
                            android:layout_gravity="center"
                            android:src="@drawable/kisanmart" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View Items"
                            android:textAlignment="center"
                            android:fontFamily="serif-monospace"
                            android:textSize="22dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.5"
                    android:layout_margin="20dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="btnBookingClick"
                        >


                        <ImageView
                            android:layout_width="143dp"
                            android:layout_height="112dp"
                            android:layout_gravity="center"
                            android:src="@drawable/kisanuser" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Bookings"
                            android:textAlignment="center"
                            android:fontFamily="serif-monospace"
                            android:textSize="22dp"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.5"
                    android:layout_margin="20dp"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="btnLogClick">



                        <ImageView
                            android:layout_width="128dp"
                            android:layout_height="105dp"
                            android:layout_gravity="center"
                            android:src="@drawable/logout" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textAlignment="center"
                            android:fontFamily="serif-monospace"
                            android:textSize="22dp"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>










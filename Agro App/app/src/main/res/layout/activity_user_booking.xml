<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".user.UserBookingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="120dp"
            android:gravity="center">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Info"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="#239128"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/etxtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:textColorHint="#239128"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/etxtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:textColorHint="#239128"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/etxtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:textColorHint="#239128"/>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/etxtMobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:background="@drawable/shape"
                android:textColorHint="#239128"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <RadioButton android:id="@+id/online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textColor="#239128"
                    android:buttonTint="#239128"
                    android:textSize="20dp"
                    android:text="Online Payment"/>
                <RadioButton android:id="@+id/delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#239128"
                    android:textSize="20dp"
                    android:buttonTint="#239128"
                    android:text="Cash on Delivery"/>
            </RadioGroup>


            <Button
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:onClick="btnBuyClick"
                android:backgroundTint="#239128"
                android:text="Buy Now"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>






